    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-testing-library": "^3.10.1",
    "eslint-plugin-unicorn": "^28.0.2",
    "husky": "^6.0.0",
    "postcss": "^8.3.0",
    "prettier": "2.2.1",
    "pretty-quick": "^3.1.0",
    "tailwindcss": "^2.1.4",
    "typescript": "4.0"
  },
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && npm run lint"
